{
    "name": "obsidian-folderize-plugin",
    "version": "0.4.1",
    "description": "Organize your Obsidian attachments automatically.",
    "author": "Jason Heddings",
    "license": "MIT",
    "keywords": [],
    "main": "main.js",
    "scripts": {
        "prepare": "husky",
        "dev": "node esbuild.config.mjs",
        "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "npm run build",
        "preflight": "npm run build && npm run format && npm run lint:fix && npm test",
        "release": "npm run preflight && git push && git push --tags",
        "version": "node version.mjs && npm run format && git add manifest.json versions.json",
        "postversion": "git commit --amend -m \"obsidian-folderize-$npm_package_version\" && git tag -f $npm_package_version"
    },
    "devDependencies": {
        "@types/node": "^24.10.9",
        "@typescript-eslint/eslint-plugin": "8.50.1",
        "@typescript-eslint/parser": "8.50.1",
        "builtin-modules": "5.0.0",
        "esbuild": "0.27.2",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "obsidian": "latest",
        "prettier": "^3.7.4",
        "tslib": "2.8.1",
        "typescript": "5.9.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "dependencies": {
        "obskit": "^1.4.2"
    }
}
